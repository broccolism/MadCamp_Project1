<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/adder_date_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="Add To"

        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adder_date_bar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="124dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:text="/"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/adder_date_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adder_date_day"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="138dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:text="3"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/adder_date_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adder_date_month"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:text="12"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/adder_date_text"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/adder_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-147dp"
        tools:layout_editor_absoluteY="0dp">

        <RadioButton
            android:id="@+id/adder_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="76dp"
            android:text="Income"
            app:layout_constraintStart_toEndOf="@+id/adder_outcome"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/adder_outcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="76dp"
            android:text="Outcome"
            app:layout_constraintEnd_toStartOf="@+id/adder_income"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RadioGroup>

    <EditText
        android:id="@+id/adder_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="553dp"
        android:ems="10"
        android:inputType="number"
        android:hint = "How much?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/adder_money_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="133dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/adder_money"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/adder_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="492dp"
        android:ems="10"
        android:inputType="text"
        android:hint = "More info..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/adder_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom = "492dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/adder_info"/>

    <Button
        android:id="@+id/add_new_account_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="260dp"
        android:text="Save"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>